<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button android:text="@string/button_game"
            android:onClick="onClickStartGameActivity"
            android:layout_width="0dp"
            android:layout_height="128dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="24sp" android:id="@+id/buttonGame"
            android:layout_marginLeft="64dp" android:layout_marginRight="64dp"/>
    <Button android:text="@string/button_exit"
            android:onClick="onClickExit"
            android:layout_width="0dp"
            android:layout_height="128dp"
            android:id="@+id/buttonExit" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonGame" android:textSize="24sp"
            android:layout_marginLeft="64dp" android:layout_marginStart="64dp" android:layout_marginRight="64dp"
            android:layout_marginEnd="64dp" android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>